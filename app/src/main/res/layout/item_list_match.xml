<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_recycler_item"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="2dp"
        android:paddingTop="@dimen/fab_margin"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Sun, 09 Sept 2018 - 19:00:12 WIB"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/match_time"
                android:layout_centerVertical="true"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tv_home_club"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="center_horizontal"
                    android:text="Chelsea"
                    android:textSize="@dimen/club_name_size" />

                <TextView
                    android:id="@+id/tv_home_club_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:text="2"
                    android:textSize="@dimen/score_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_horizontal"
                    android:text="VS" />

                <TextView
                    android:id="@+id/tv_away_club_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/score_size" />

                <TextView
                    android:id="@+id/tv_away_club"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="center_horizontal"
                    android:text="Man City"
                    android:textSize="@dimen/club_name_size" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
